<ul>
  <% @blogs.each do |blog| %>
    <li>
      <strong><%= blog.title %></strong> - <%= blog.content %>
      <ul>
        <% blog.comments.each do |comment| %>
          <li><%= comment.content %></li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>
<%= simple_form_for @blog do |f| %>
  <%= f.input :title %>
  <%= f.input :content %>
  <%= f.submit %>
<% end %>
